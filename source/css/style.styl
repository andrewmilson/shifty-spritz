#shifty-spritz
  width 100%
  background #ccc
  border-color #ccc
  border-top 10px solid #ccc
  border-bottom 10px solid #ccc
  top 0
  left 0
  text-align left
  display block
  z-index 2147483647
  position fixed
  user-select none
  transition border-color 0.2s cubic-bezier(0.785, 0.135, 0.150, 0.860), background 0.2s cubic-bezier(0.785, 0.135, 0.150, 0.860)
  outline none
  font-family "Droid sans"
  box-sizing border-box

  *
    box-sizing border-box

  &:hover, &:active
    border-color #222
    background #222

  &:hover #controls-shifty, &:active #controls-shifty
    visibility visible
    opacity 1
    bottom -40px

  &.hide
    display none

  i
    line-height 40px
    cursor pointer
    color #bbb
    font-size 14px
    margin 0
    padding 0 6px

    &.left-shifty
      float left

    &.right-shifty
      float right

  #controls-shifty
    display block
    visibility hidden
    width 100%
    opacity 1
    position absolute
    bottom 0px
    background inherit
    box-sizing border-box
    height 40px
    margin 0 0 0 0
    transition bottom 0.2s cubic-bezier(0.785, 0.135, 0.150, 0.860), visibility 0.2s cubic-bezier(0.785, 0.135, 0.150, 0.860)
    transform-origin top center

    #pause-play-shifty
      padding-left 12px

    #close-shifty
      padding-right 12px

    #pause-play-shifty
      margin 0

    #progress-bar-shifty
      background #333
      margin 14px 6px 0 0
      height 12px
      position relative
      width calc(100% - 70px)
      cursor pointer
      border-radius 6px
      float right

      #seek-shifty, #progress-shifty:after
        display block
        border-radius 3px
        opacity 0
        background #333
        height 6px
        width 6px
        transition opacity 0.1s linear
        margin 0 0 0 -3px
        position absolute
        top 3px

      &:hover #seek-shifty
        opacity 0.5

      #progress-shifty
        height 100%
        border-radius 6px
        min-width 12px
        position relative
        background #bbb
        width 0

        &:after
          content ""
          opacity 1
          right 3px
          margin 0

  #words-shifty
    background #fff
    border-bottom none
    height 50px
    font-size 25px
    font-weight bold
    z-index 1
    line-height 50px
    width 100%
    border-color inherit
    position relative

    #countdown-shifty
      height 100%
      position absolute
      background #ccc
      z-index -1
      left 0
      top 0

    #left-shifty, #right-shifty, #center-shifty
      height 100%
      color #333
      min-height 1px
      z-index 1
      float left
      display inline

    #center-shifty
      border-color inherit
      color #fa3d3d
      display block
      position relative

      &:before, &:after
        content ""
        display block
        border 5px solid transparent
        position absolute
        left 50%

      &:after
        border-top-color inherit
        top 0
        margin 0 0 0 -5px

      &:before
        border-bottom-color inherit
        top 100%
        margin -10px 0 0 -5px

    #left-shifty
      width 30%
      text-align right
